"---------- General ----------"
syntax on
set t_Co=256
"show line numbers"
set number

"---------- Search ----------"
"highlist search"
set hlsearch
set incsearch

"---------- Indentation ----------"
filetype plugin indent on
set expandtab
set shiftwidth=4
set tabstop=4
set softtabstop=4
"round indent to nearest of 4"
set shiftround
set nowrap

"---------- Theme ----------"
colo default
set guifont=JetBrains\ Mono:style=Regular

"---------- View ----------"
set laststatus=2
set showmode
set showcmd
set modeline
set ruler
set title

